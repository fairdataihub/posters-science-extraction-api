{
  "$id": "https://posters.science/schema/v0.1/poster_extraction_schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Poster Extraction Output Schema",
  "description": "Schema for validating LLM extracted poster metadata. This is a subset of the full poster_schema.json, requiring only fields that can be extracted from poster images.",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "creators": {
      "type": "array",
      "description": "The authors of the poster, in priority order. Format: family, given.",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The full name of the creator. Personal name format should be: family, given.",
            "minLength": 1
          },
          "givenName": {
            "type": "string",
            "description": "The given (first) name of the creator.",
            "minLength": 1
          },
          "familyName": {
            "type": "string",
            "description": "The family (last) name of the creator.",
            "minLength": 1
          },
          "nameType": {
            "type": "string",
            "description": "The type of name of the creator.",
            "enum": ["Personal", "Organizational"]
          },
          "affiliation": {
            "type": "array",
            "description": "The affiliation(s) of the creator as plain-text strings.",
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "required": ["name"]
      },
      "minItems": 1
    },
    "titles": {
      "type": "array",
      "description": "The titles of the poster.",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the poster.",
            "minLength": 1
          }
        },
        "required": ["title"]
      },
      "minItems": 1
    },
    "publicationYear": {
      "type": "integer",
      "description": "The year when the poster was presented or published. Format: YYYY",
      "minimum": 1900,
      "maximum": 2100
    },
    "subjects": {
      "type": "array",
      "description": "Keywords or subject terms extracted from the poster.",
      "items": {
        "type": "object",
        "properties": {
          "subject": {
            "type": "string",
            "description": "A keyword or subject term.",
            "minLength": 1
          }
        },
        "required": ["subject"]
      },
      "minItems": 1
    },
    "descriptions": {
      "type": "array",
      "description": "Abstract or description text extracted from the poster.",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Description text (typically the abstract).",
            "minLength": 1
          },
          "descriptionType": {
            "type": "string",
            "description": "The type of description.",
            "enum": ["Abstract", "Methods", "SeriesInformation", "TableOfContents", "TechnicalInfo", "Other"]
          }
        },
        "required": ["descriptionType", "description"]
      },
      "minItems": 1
    },
    "publisher": {
      "type": "object",
      "description": "The entity responsible for making the poster available (e.g., conference organizer, institution).",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the publisher.",
          "minLength": 1
        }
      },
      "required": ["name"]
    },
    "conference": {
      "type": "object",
      "description": "Conference information extracted from the poster.",
      "properties": {
        "conferenceName": {
          "type": "string",
          "description": "Name of the conference",
          "minLength": 1
        },
        "conferenceYear": {
          "type": "integer",
          "description": "Year of the conference. Format: YYYY",
          "minimum": 1900,
          "maximum": 2100
        },
        "conferenceLocation": {
          "type": "string",
          "description": "Location of the conference",
          "minLength": 1
        },
        "conferenceStartDate": {
          "type": "string",
          "description": "Start date of the conference (YYYY-MM-DD)"
        },
        "conferenceEndDate": {
          "type": "string",
          "description": "End date of the conference (YYYY-MM-DD)"
        },
        "conferenceAcronym": {
          "type": "string",
          "description": "Acronym of the conference"
        }
      },
      "required": ["conferenceName", "conferenceYear"]
    },
    "rightsList": {
      "type": "array",
      "description": "Rights and license information. Required for FAIR compliance.",
      "items": {
        "type": "object",
        "properties": {
          "rights": {
            "type": "string",
            "description": "License name or identifier.",
            "minLength": 1
          },
          "rightsUri": {
            "type": "string",
            "description": "URI of the license."
          },
          "rightsIdentifier": {
            "type": "string",
            "description": "Short standardized license identifier (e.g., CC-BY-4.0)."
          }
        },
        "required": ["rights"]
      },
      "minItems": 1
    },
    "formats": {
      "type": "array",
      "description": "Technical format of the poster file. Auto-detected from upload.",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1
    },
    "content": {
      "type": "object",
      "description": "Text content extracted from the poster organized into sections.",
      "properties": {
        "sections": {
          "type": "array",
          "description": "Array of content sections extracted from the poster.",
          "items": {
            "type": "object",
            "description": "A single section of the poster with its title and content.",
            "properties": {
              "sectionTitle": {
                "type": "string",
                "description": "The title or heading of this section."
              },
              "sectionContent": {
                "type": "string",
                "description": "The text content of this section."
              }
            }
          }
        },
        "unstructuredContent": {
          "type": "string",
          "description": "Optional field for poster content that cannot be organized into clear sections."
        }
      }
    },
    "imageCaptions": {
      "type": "array",
      "description": "Array of image/figure caption objects with optional id for cross-referencing.",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Optional identifier for cross-referencing (e.g., 'fig1')."
          },
          "caption": {
            "type": "string",
            "minLength": 1,
            "description": "The full caption text for this image/figure."
          }
        },
        "required": ["caption"]
      }
    },
    "tableCaptions": {
      "type": "array",
      "description": "Array of table caption objects with optional id for cross-referencing.",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Optional identifier for cross-referencing (e.g., 'table1')."
          },
          "caption": {
            "type": "string",
            "minLength": 1,
            "description": "The full caption text for this table."
          }
        },
        "required": ["caption"]
      }
    }
  },
  "required": ["creators", "titles", "publicationYear", "subjects", "descriptions", "publisher", "conference", "formats"]
}
