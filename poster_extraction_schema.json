{
  "$id": "https://posters.science/schema/v0.1/poster_extraction_schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Poster Extraction Output Schema",
  "description": "Schema for validating LLM extracted poster metadata. This is a subset of the full poster_schema.json, requiring only fields that can be extracted from poster images.",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "creators": {
      "type": "array",
      "description": "The authors of the poster, in priority order. Format: family, given.",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The full name of the creator. Personal name format should be: family, given.",
            "minLength": 1
          },
          "givenName": {
            "type": "string",
            "description": "The given (first) name of the creator. Use only for personal names.",
            "minLength": 1
          },
          "familyName": {
            "type": "string",
            "description": "The family (last) name of the creator. Use only for personal names.",
            "minLength": 1
          },
          "nameType": {
            "type": "string",
            "description": "The type of name of the creator.",
            "enum": ["Personal", "Organizational"]
          },
          "nameIdentifiers": {
            "type": "array",
            "description": "The name identifiers of the creator (e.g., ORCID).",
            "items": {
              "type": "object",
              "properties": {
                "nameIdentifier": {
                  "type": "string",
                  "minLength": 1
                },
                "nameIdentifierScheme": {
                  "type": "string",
                  "minLength": 1
                },
                "schemeURI": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "required": ["nameIdentifier"]
            }
          },
          "affiliation": {
            "type": "array",
            "description": "The affiliation(s) of the creator. Can be strings or objects.",
            "items": {
              "oneOf": [
                {
                  "type": "string",
                  "description": "Simple affiliation name string.",
                  "minLength": 1
                },
                {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "The name of the affiliated institution.",
                      "minLength": 1
                    },
                    "affiliationIdentifier": {
                      "type": "string",
                      "minLength": 1
                    },
                    "affiliationIdentifierScheme": {
                      "type": "string",
                      "minLength": 1
                    },
                    "schemeURI": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": ["name"]
                }
              ]
            }
          }
        },
        "required": ["name"]
      },
      "minItems": 1
    },
    "titles": {
      "type": "array",
      "description": "The titles of the poster.",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the poster.",
            "minLength": 1
          },
          "titleType": {
            "type": "string",
            "description": "The type of title.",
            "enum": ["AlternativeTitle", "Subtitle", "TranslatedTitle", "Other"]
          }
        },
        "required": ["title"]
      },
      "minItems": 1
    },
    "posterContent": {
      "type": "object",
      "description": "Text content extracted from the poster organized into sections.",
      "properties": {
        "sections": {
          "type": "array",
          "description": "Array of content sections extracted from the poster.",
          "items": {
            "type": "object",
            "description": "A single section of the poster with its title and content.",
            "properties": {
              "sectionTitle": {
                "type": "string",
                "description": "The title or heading of this section."
              },
              "sectionContent": {
                "type": "string",
                "description": "The text content of this section."
              }
            }
          }
        },
        "unstructuredContent": {
          "type": "string",
          "description": "Optional field for poster content that cannot be organized into clear sections."
        }
      }
    },
    "imageCaptions": {
      "type": "array",
      "description": "Array of image caption objects.",
      "items": {
        "type": "object",
        "description": "Caption information for a single image.",
        "properties": {
          "captions": {
            "type": "array",
            "description": "Array of caption text segments for this image.",
            "items": {
              "type": "string",
              "minLength": 1
            },
            "minItems": 1
          }
        }
      }
    },
    "tableCaptions": {
      "type": "array",
      "description": "Array of table caption objects.",
      "items": {
        "type": "object",
        "description": "Caption information for a single table.",
        "properties": {
          "captions": {
            "type": "array",
            "description": "Array of caption text segments for this table.",
            "items": {
              "type": "string",
              "minLength": 1
            },
            "minItems": 1
          }
        }
      }
    }
  },
  "required": ["creators", "titles", "posterContent"]
}
